<div class="container">
    <div class="row align-items-start">
      <div class="col dashboard-profile">
        <h2><%= userProfile.username %></h2>
        <p>Date joined:</p>
        <p>Interests:</p>
      </div>
      <!--------------------- CLASSES BOOKED ---------------------->
      <div class="col dashboard-booked">
        <h4>Classes Booked</h4>
        <div class="container booked-classes">
          <div class="row">

            <% if (bookedClasses.length !== 0) { %>

                <% bookedClasses.forEach((element, index) => { %>
                  <% let startDate = moment(element.startDateTime).format('ddd DD MMM YYYY') %>
                  <% let startTime = moment(element.startDateTime).format('h:mm a') %>


                  <div class="col-sm-6">
                      <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><%= element.nameOfClass %></h5>
                            <p class="card-text">Start Date: <%= startDate %></p>
                            <p class="card-text">Start Time: <%= startTime %></p>
                            <a href="/classes/<%= element.slug %>/<%= element._id %>" class="btn btn-primary">More info</a>
                        </div>
                      </div>
                  </div>

                <% }) %>

            <% } else { %>
                <p>No classes booked</p>
            <% } %>
          </div>
        </div>
      </div>

      <!--------------------- CLASSES ORGANISED ---------------------->
      <div class="col dashboard-organised">
        <h4>Classes Organised</h4>
        <div class="container organised-classes">
          <div class="row">

            <% if (organisedClasses.length !== 0) { %>

                <% organisedClasses.forEach((element, index) => { %>
                  <% let startDate = moment(element.startDateTime).format('ddd DD MMM YYYY') %>
                  <% let startTime = moment(element.startDateTime).format('h:mm a') %>

                  <div class="col-sm-6">
                      <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><%= element.nameOfClass %></h5>
                            <p class="card-text">Start Date: <%= startDate%></p>
                            <p class="card-text">Start Time: <%= startTime%></p>
                            <a href="/classes/<%= element.slug %>/<%= element._id %>" class="btn btn-primary">More info</a>
                        </div>
                      </div>
                  </div>

                <% }) %>

            <% } else { %>
                <p>No classes organised</p>
            <% } %>
          </div>
        </div>
      </div>
    </div>
</div>