<%- include('../partials/header') %>

<div class="search-bar mb-3 mt-3">
    <h1>Quick Search</h1>
    <div class="row">
        <div class="col-md-2">
          <input type="text" class="form-control" placeholder="Day" aria-label="Day">
        </div>
        <div class="col-md-2">
          <input type="text" class="form-control" placeholder="Time" aria-label="Time">
        </div>
        <div class="col-md-2">
            <input type="text" class="form-control" placeholder="Genre" aria-label="Genre">
          </div>
          <div class="col-md-2">
            <input type="text" class="form-control" placeholder="Location" aria-label="Location">
          </div>
          <div class="col-md-2">
            <input type="text" class="form-control" placeholder="Price" aria-label="Price">
          </div>
          <div class="col-md-2">
            <button type="button" class="btn btn-primary">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                    <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                </svg>
            </button>
          </div>       
      </div>
</div>

<h1>All Classes</h1>
<div class="container">
    <div class="scrollable-box">
        <div class="row">

            <% if (classes.length !== 0) { %>

                <% classes.forEach((element, index) => { %>

                    <div class="col-sm-3">
                        <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><%= element.nameOfClass %></h5>
                            <p class="card-text">Date:<%= element.startDate%></p>
                            <p class="card-text">Time:<%= element.startTime%></p>
                            <a href="/classes/<%= element.slug %>/<%= element._id %>" class="btn btn-primary">More info</a>
                        </div>
                        </div>
                    </div>

                <% }) %>

            <% } else { %>
                <p>No classes available</p>
            <% } %>
        </div>
    </div>  

</div>

<%- include('../partials/footer') %>